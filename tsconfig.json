{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@game/*": ["game/*"]
    },
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleDetection": "force",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
